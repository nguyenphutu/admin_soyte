@model List<admin.tandienbien.gov.vn.Objects.PostDetail>
@{
    ViewBag.Title = "Quản lý bài viết";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Quản lý bài viết</h2>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách bài viết
                <a href="/Post/ChangePost" class="btn btn-primary" style="float:right; margin-top: -7px;"><i class="fa fa-plus fa-fw"></i> Thêm bài viết mới</a>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th style="text-align:center;">ID</th>
                            <th style="text-align:center;">Tiêu đề bài viết</th>
                            <th style="text-align:center;">Ngày đăng</th>
                            <th style="text-align:center;">Trạng thái</th>
                            <th style="text-align:center;">Tác giả</th>
                            <th style="text-align:center;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var pd in Model)
                            {
                                <tr class="odd gradeX">
                                    <td style="text-align:center">@pd.ID</td>
                                    <td>@pd.HEADING_LVL1</td>
                                    <td class="right">@pd.POST_DATE.ToString("dd/MM/yyyy")</td>
                                    <td class="center">@pd.STATUS</td>
                                    <td class="center">@pd.AUTHOR</td>
                                    <td class="center" style="width:10%">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                                                Chọn hành động
                                                <span class="caret"></span>
                                            </button>
                                            <ul class="dropdown-menu pull-right" role="menu">
                                                <li>
                                                    <a href="/Post/ViewPost?post_id=@pd.ID" target="_blank">Xem chi tiết bài viết</a>
                                                </li>
                                                <li>
                                                    <a href="/Post/ChangePost?post_id=@pd.ID">Sửa bài viết</a>
                                                </li>
                                                @{
                                                    if (pd.STATUS_ID != 4)
                                                    {
                                                        <li>
                                                            <a href="/Post/ClosePost?post_id=@pd.ID">Khóa bài viết</a>
                                                        </li>
                                                    }
                                                    else
                                                    {
                                                        <li>
                                                            <a href="/Post/ClosePost?post_id=@pd.ID">Mở bài viết</a>
                                                        </li>
                                                    }
                                                }

                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
               
            </div>
        </div>
    </div>
</div>

