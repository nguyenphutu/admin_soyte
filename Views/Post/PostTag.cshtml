@model List<admin.tandienbien.gov.vn.Objects.MngTagPost>
@{
    var tag = (List<admin.tandienbien.gov.vn.Models.TAG>)ViewBag.Tag;
}
<form action="/Post/UpTagPost?post_id=@TempData["ID_POST"]" enctype="multipart/form-data" method="POST" role="form">
    @Html.AntiForgeryToken()
    <input type="hidden" id="ID_POST" name="ID_POST" value="@TempData["ID_POST"]" />

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Danh sách bài viết cùng chuyên mục
                </div>
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th style="text-align:center;">Chọn</th>
                                <th style="text-align:center;">Tiêu đề bài viết</th>
                                <th style="text-align:center;">Tác giả</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var p in Model)
                                {
                                    <tr class="odd gradeX">
                                        <td style="text-align:center">
                                            <div class="form-group">

                                                <div class="checkbox">
                                                    <label>
                                                        <input type="checkbox" value="@p.POST_ID" id="tag_post_id" name="tag_post_id" @(tag.FindIndex(t => t.TAG_POST_ID == p.POST_ID) != -1 ? Html.Raw("checked") : Html.Raw(""))>
                                                    </label>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@p.POST_HEADING_LVL1</td>
                                        <td class="right">@p.AUTHOR</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
            <button type="submit" class="btn btn-primary">Cập nhật tag</button>
        </div>
    </div>
</form>
