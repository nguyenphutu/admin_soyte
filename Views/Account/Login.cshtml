.@using CaptchaMvc.HtmlHelpers
@using admin.tandienbien.gov.vn.Models
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Đăng nhập hệ thống";
}

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Đăng nhập</h3>
                </div>
                <div class="panel-body">
                    <form method="post" action="/Account/Login" id="frm" >
                        @Html.AntiForgeryToken()
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="Tên đăng nhập" name="username" id="username"  autofocus>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Mật khẩu" name="password" id ="password" type="password" value="">
                            </div>
                            <div class="form-group">
                                @Html.Captcha("Refresh", "Bạn hãy nhập ký tự ở trên", 5, "The Captcha is required", true)
                            </div>
                            @if (TempData["Message"] != null)
                            {
                                <label>@TempData["Message"].ToString()</label>
                            }
                            <!-- Change this to a button or input when using this as a form -->
                            <button class="btn btn-lg btn-success btn-block" data-callback="submit">
                                Đăng nhập
                            </button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>