@model List<admin.tandienbien.gov.vn.Models.DOCUMENT_TYPE>
@{
    ViewBag.Title = "Quản lý tài liệu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Quản lý tài liệu hướng dẫn nghiệp vụ</h2>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách chủ đề tài liệu
                <a href="/QuanLyDanhmuc/Changeloaitailieu" class="btn btn-primary" style="float:right; margin-top: -7px;"><i class="fa fa-plus fa-fw"></i> Thêm mới chủ đề</a>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th style="width:10%; text-align:center;">ID</th>
                            <th style="width:60%; text-align:center;">Tên chủ đề tài liệu</th>
                            <th style="width:10%; text-align:center;">Số lượng tài liệu</th>
                            <th style="width:10%; text-align:center;">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var dct in Model)
                            {
                                <tr class="odd gradeX">
                                    <td align="center">@dct.ID</td>
                                    <td>@dct.NAME</td>
                                    <td align="right">@dct.DOCUMENTS.Count</td>
                                    <td style="width:10%">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                                                Chọn hành động
                                                <span class="caret"></span>
                                            </button>
                                            <ul class="dropdown-menu pull-right" role="menu">
                                                <li>
                                                    <a href="/Tailieu/ChangerTaiLieu?dc_tp_id=@dct.ID">Thêm tài liệu mới</a>
                                                </li>
                                                <li>
                                                    <a href="/Tailieu/ViewDocument?dc_tp_id=@dct.ID">Xem tài liệu</a>
                                                </li>
                                                <li>
                                                    <a href="/Tailieu/ViewDocument?dc_tp_id=@dct.ID">Cập nhật tài liệu</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                           }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
