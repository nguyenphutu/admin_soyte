@model List<admin.tandienbien.gov.vn.Objects.PostOfDependent>
@{
    ViewBag.Title = "Thống kê bài viết theo đơn vị";
}
<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Thống kê bài viết theo đơn vị</h2>

    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th style="width:10%; text-align:center;">STT</th>
                            <th style="width:35%; text-align:center;">Tên đơn vị</th>
                            <th style="width:45%; text-align:center;">Số bài viết</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var pod in Model)
                            {
                                <tr class="odd gradeX">
                                    <td align="center">@(int.Parse(Model.IndexOf(pod).ToString())+1)</td>
                                    <td >@pod.tendonvi</td>
                                    <td align="right">@pod.sobaiviet</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
