@model admin.tandienbien.gov.vn.Models.ANSWER_TYPE
@{
    ViewBag.Title = "Cập nhật thông tin loại câu hỏi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Cập nhật thông tin loại câu hỏi</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Nhập thông tin
            </div>
            <div class="panel-body">
                <div class="row">
                    <form action="/QuanLyDanhMuc/SaveLoaicauhoi" enctype="multipart/form-data" method="POST" role="form">
                        @Html.AntiForgeryToken()
                        <input type="hidden" id="ID" name="ID" value="@Model.ID" />
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Tên loại câu hỏi(*)</label>
                                <input class="form-control" id="NAME" name="NAME" value="@Model.NAME" required>
                            </div>
                            <div class="form-group">
                                <label>Mô tả(*)</label>
                                <input class="form-control" id="DESCRIPTION" name="DESCRIPTION" value="@Model.DESCRIPTION" required>
                            </div>
                            @{
                                if (Model.ID != 0)
                                {
                                    <button type="submit" class="btn btn-success"><i class="fa fa-check-circle-o fa-fw"></i> Cập nhật</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-plus fa-fw"></i> Thêm mới</button>
                                }
                            }
                            <button type="reset" class="btn btn-warning"><i class="fa fa-times-circle fa-fw"></i> Nhập lại</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>




