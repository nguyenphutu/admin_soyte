@model List<admin.tandienbien.gov.vn.Models.CONFIG_MENU>
@{
    ViewBag.Title = "Quản lý danh mục menu hệ thống";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Quản lý danh mục menu Website</h2>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách menu <a href="/QuanLyDanhmuc/Changemenu" class="btn btn-primary" style="float:right; margin-top: -7px;"><i class="fa fa-plus fa-fw"></i> Thêm mới Menu</a>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th style="width:10%; text-align:center;">ID</th>
                            <th style="width:35%; text-align:center;">Tên Menu</th>
                            <th style="width:45%; text-align:center;">Url</th>
                            <th style="width:15%; text-align:center;">Trạng thái</th>
                            <th style="width:5%; text-align:center;">Icon CSS</th>
                            <th style="width:25%; text-align:center;">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var mn in Model)
                            {
                                <tr class="odd gradeX">
                                    <td align="center">@mn.ID</td>
                                    <td>@mn.MENU_NAME</td>
                                    <td>@mn.URL</td>
                                    @{
                                        if (mn.STATUS_ID != 11)
                                        {
                                            <td>Hoạt động</td>
                                        }
                                        else
                                        {
                                            <td>Ngừng hoạt động</td>
                                        }
                                    }
                                    <td style="width:10%">@mn.ICON_CSS</td>
                                    <td style="width:10%">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                                                Chọn hành động
                                                <span class="caret"></span>
                                            </button>
                                            <ul class="dropdown-menu pull-right" role="menu">
                                                <li>
                                                    <a href="/QuanLyDanhmuc/Changemenu?mnu_id=@mn.ID">Sửa thông tin</a>
                                                </li>
                                                @{
                                                    if (mn.STATUS_ID != 11)
                                                    {
                                                        <li>
                                                            <a href="/QuanLyDanhmuc/UpstatusMenu?mnu_id=@mn.ID">Khóa Menu</a>
                                                        </li>
                                                    }
                                                    else
                                                    {
                                                        <li>
                                                            <a href="/QuanLyDanhmuc/UpstatusMenu?mnu_id=@mn.ID">Mở khóa Menu</a>
                                                        </li>
                                                    }
                                                }

                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                           }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

