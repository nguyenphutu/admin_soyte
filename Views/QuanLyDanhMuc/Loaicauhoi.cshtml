@model List<admin.tandienbien.gov.vn.Models.ANSWER_TYPE>
@{
    ViewBag.Title = "Quản lý danh mục loại câu hỏi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Quản lý danh mục loại câu hỏi pháp luật</h2>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách loại câu hỏi <a href="/QuanLyDanhmuc/Changeloaicauhoi" class="btn btn-primary" style="float:right; margin-top: -7px;"><i class="fa fa-plus fa-fw"></i> Thêm mới loại câu hỏi</a>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th style="width:10%; text-align:center;">ID</th>
                            <th style="width:35%; text-align:center;">Tên tên loại câu hỏi</th>
                            <th style="width:10%; text-align:center;">Mô tả</th>
                            <th style="width:25%; text-align:center;">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var lch in Model)
                            {
                                <tr class="odd gradeX">
                                    <td align="center">@lch.ID</td>
                                    <td>@lch.NAME</td>
                                    <td>@lch.DESCRIPTION</td>
                                    <td style="width:10%">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                                                Chọn hành động
                                                <span class="caret"></span>
                                            </button>
                                            <ul class="dropdown-menu pull-right" role="menu">
                                                <li>
                                                    <a href="/QuanLyDanhmuc/Changeloaicauhoi?lch_id=@lch.ID">Sửa thông tin</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



