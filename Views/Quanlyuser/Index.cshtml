@model List<admin.tandienbien.gov.vn.Models.USER_PROFILE>
@{
    ViewBag.Title = "Quản lý thông tin nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Quản lý thông tin nhân viên</h2>

    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách nhân viên <a href="/Quanlyuser/ChangeUserprofile" class="btn btn-primary" style="float:right; margin-top: -7px;"><i class="fa fa-plus fa-fw"></i> Thêm mới nhân viên</a>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th style="width:10%; text-align:center;">ID</th>
                            <th style="width:35%; text-align:center;">Tên nhân viên</th>
                            <th style="width:45%; text-align:center;">Đơn vị</th>
                            <th style="width:15%; text-align:center;">Số điện thoại</th>
                            <th style="width:5%; text-align:center;">Email</th>
                            <th style="width:25%; text-align:center;">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var uspr in Model)
                            {
                                <tr class="odd gradeX">
                                    <td align="center">@uspr.ID</td>
                                    <td>@uspr.NAME</td>
                                    <td>@uspr.ADDRESS</td>
                                    <td>@uspr.PHONE_NUMBER</td>
                                    <td style="width:15%">@uspr.EMAIL</td>
                                    <td style="width:10%">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                                                Chọn hành động
                                                <span class="caret"></span>
                                            </button>
                                            <ul class="dropdown-menu pull-right" role="menu">
                                                <li>
                                                    <a href="/Quanlyuser/ChangeUserprofile?usp_id=@uspr.ID">Sửa thông tin</a>
                                                </li>
                                               
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

