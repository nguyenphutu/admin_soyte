@model List<admin.tandienbien.gov.vn.Models.USER>
@{
    ViewBag.Title = "Quản lý tài khoản người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Quản lý tài khoản người dùng</h2>

    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách nhân viên <a href="/Quanlyuser/ChangeUser" class="btn btn-primary" style="float:right; margin-top: -7px;"><i class="fa fa-plus fa-fw"></i> Thêm mới nhân viên</a>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th style="width:10%; text-align:center;">ID</th>
                            <th style="width:20%; text-align:center;">Tài khoản đăng nhập</th>
                            <th style="width:20%; text-align:center;">Tên nhân viên</th>
                            <th style="width:20%; text-align:center;">Đơn vị</th>
                            <th style="width:5%; text-align:center;">Trạng thái</th>
                            <th style="width:25%; text-align:center;">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var us in Model)
                            {
                                <tr class="odd gradeX">
                                    <td align="center">@us.ID</td>
                                    <td>@us.USERNAME</td>
                                    <td>@us.USER_PROFILE.FirstOrDefault().NAME</td>
                                    <td>@us.USER_PROFILE.FirstOrDefault().ADDRESS</td>
                                    @{
                                        if (us.ACTIVE == 1)
                                        {
                                            <td style="width:15%">Hoạt động</td>
                                        }
                                        else
                                        {
                                            <td style="width:15%">Khóa</td>
                                        }
                                    }
                                   
                                    <td style="width:10%">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                                                Chọn hành động
                                                <span class="caret"></span>
                                            </button>
                                            <ul class="dropdown-menu pull-right" role="menu">
                                                <li>
                                                    <a href="/Quanlyuser/ChangeUser?us_id=@us.ID">Sửa thông tin</a>
                                                </li>
                                                <li>
                                                    @{
                                                        if (us.ACTIVE == 1)
                                                        {
                                                            <a href="/Quanlyuser/LockUser?us_id=@us.ID">Khóa tài khoản</a>
                                                        }
                                                        else
                                                        {
                                                            <a href="/Quanlyuser/LockUser?us_id=@us.ID">Mở khóa tài khoản</a>
                                                        }
                                                    }
                                                    
                                                </li>
                                                <li>
                                                    <a href="/Quanlyuser/UserRoles?us_id=@us.ID">Phân quyền</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

